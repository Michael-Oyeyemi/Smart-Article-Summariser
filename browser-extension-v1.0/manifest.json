{
    "manifest_version": 3,
    "name": "Article Summariser",
    "version": "1.0",
    "description": "Summarise and analyse any article in one click",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "host_permissions": ["<all_urls>"]
}